---
import SocialIcons from "./socialIcons.astro";
import FooterSection from "./footerSection.astro";
---

<footer
  class="w-full celular:px-20 tablet:px-10 py-10 px-40 text-center text-white bg-[#1E1E1E]"
>
  <div class="mb-4 flex items-center celular:justify-around">
    <img src="../logo-owlyx-white.webp" alt="Owlyx Logo" class="w-24 mr-2" />
    <img
      src="../isologo-owlyx-white.webp"
      alt="Owlyx Logo Letra"
      class="h-10 celular:hidden"
    />
  </div>
  <div
    class="celular:flex-col celular:items-center max-w-screen-2xl mx-auto flex justify-between flex-wrap"
  >
    <FooterSection header="SERVICIOS">
      <a class="mb-1" href="/CreacióndeSitiosWeb">Creación de Sitios Web</a>
      <a class="mb-1" href="/DiseñodeSitiosWeb">Diseño de Sitios Web</a>
      <a class="mb-1" href="/BrandingeIdentidad">Branding e Identidad</a>
    </FooterSection>

    <FooterSection header="CONTACTO">
      <p class="mb-1">+51 954 659 752</p>
      <p class="mb-1">team@owlyx.net</p>
    </FooterSection>
    <FooterSection header="REDES SOCIALES">
      <SocialIcons />
    </FooterSection>
  </div>
  <div class="max-w-6xl mx-auto mt-5 text-sm">
    <p>©2025 Owlyx S.A.C Todos los derechos reservados</p>
  </div>
</footer>
