<script>
  document.addEventListener("DOMContentLoaded", () => {
    const devIcon = document.getElementById("dev-icon");
    const designIcon = document.getElementById("design-icon");
    const brandingIcon = document.getElementById("branding-icon");
    const infoTitle = document.getElementById("info-title");
    const infoContent = document.getElementById("info-content");

    // Verificar que los elementos existan antes de añadir eventos
    if (devIcon && designIcon && brandingIcon && infoTitle && infoContent) {
      // Mostrar la información de "dev" por defecto
      infoTitle.innerHTML = "Creación de Sitios Web";
      infoContent.innerHTML =
        "Ofrecemos desarrollo de sitios web personalizados con tecnologías modernas.";

      // Evento para desarrollo
      devIcon.addEventListener("click", () => {
        infoTitle.innerHTML = "Creación de Sitios Web";
        infoContent.innerHTML =
          "Ofrecemos desarrollo de sitios web personalizados con tecnologías modernas.";
      });

      // Evento para diseño
      designIcon.addEventListener("click", () => {
        infoTitle.innerHTML = "Diseño de Sitios Web";
        infoContent.innerHTML =
          "Diseño de sitios web atractivos y funcionales que reflejen la identidad de tu negocio.";
      });

      // Evento para branding
      brandingIcon.addEventListener("click", () => {
        infoTitle.innerHTML = "Branding e Identidad";
        infoContent.innerHTML =
          "Creamos identidades visuales y estrategias de marca que reflejen la identidad de tu negocio.";
      });
    } else {
      console.error("No se encontraron los elementos necesarios en el DOM.");
    }
  });
</script>
